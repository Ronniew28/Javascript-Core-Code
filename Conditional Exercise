let phrase = "go";
    if (phrase === "stop") {
        console.log("Traffic light is red");
    }
        else if(phrase === "wait"){
        console.log("Traffic light is amber");
        }

            else if(phrase === "go") {
                console.log("Traffic light is green");
            }

                else if(phrase != "go" || phrase !="wait" || phrase !="stop") {
                    console.log("No match found");
                }
