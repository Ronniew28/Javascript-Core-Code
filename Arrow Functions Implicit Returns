const rollDice = () => {
    return Math.floor(Math.random() * 6) + 1
}

//Implicit return
const rollDice1 = () => {
    return Math.floor(Math.random() * 6) + 1
    //return can be removed to make the statement implicit
}

const add = (a, b) => a + b;

//Will only work with ONE expression in the function
