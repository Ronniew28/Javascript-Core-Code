function caps (word1) {
    console.log(`The word is:  ${word1.toUpperCase(0)}`); //outputs whole line in caps
    console.log(`The word is:  ${word1.charAt(0).toUpperCase(0)}`);//outputs the letter T only
    console.log(`The word is:  ${word1.charAt(0).toUpperCase(0) + word1.slice(1)}`);//outputs full word with T in Caps
}
caps("testing");
