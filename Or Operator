const num1 = 3;
const num2 = 7;

    if(num1 > 3 || num2 >6) {
        console.log("One condition is true");
    }

const age = 21;

    if(age > 21 || age ===30) {
        console.log("Too old");
    } else if (age === 18 || age < 21 ) {
        console.log ("Too young");
    } else if (age === 21) {
        console.log("Correct age");
    }
