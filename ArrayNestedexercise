const airplaneSeats = [
    ['Ruth', 'Anthony', 'Stevie'],
    ['Amelia', 'Pedro', 'Maya'],
    ['Xavier', 'Ananya', 'Luis'],
    ['Luke', 'Tom', 'Deniz'],
    ['Rin', 'Sakura', 'Francisco']
];

for(let i=0; i<airplaneSeats.length; i++){
    for(let j=0; j<airplaneSeats[i].length; j++){
  console.log(airplaneSeats[i][j]);
      if (airplaneSeats[i][j] === 'item 1') airplaneSeats[i].splice(j, 1);
  }
}
console.log(airplaneSeats );
console.log(airplaneSeats[3][1]);
