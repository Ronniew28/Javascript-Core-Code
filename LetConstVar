//let keyword used to declare variables that will change later
let age = 30;
console.log(age);
age = 31;
console.log(age);

//const keyword used to declare variables where the value wouldn't change
//const must always have an initial value
const number = 777;
number = 778; //this will generate a type error
console.log(number);

//var is a legacy keyword
var text = "hello world";
console.log(text);
text = "hello coders";
console.log(text);
