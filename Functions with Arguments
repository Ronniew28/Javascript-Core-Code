//-------------------------------------------------------------------------------

//Arguments are inputs to a function

function greet (firstName) { //firstName is the parameter
    console.log(`firstName: ${firstName}`);
}
greet('Tom'); //whats passed to the function is the argument
//-----------------------------------------------

function hi (name) {
    console.log(`Hi there ${name}`);
}
hi('Dude');
//------------------------------------------------

function fab (title) {
    console.log(`${title} is fab`);
}
fab(`Jessica`);
//-------------------------------------------------

//If no arument is passed to the function, it will return undefined
