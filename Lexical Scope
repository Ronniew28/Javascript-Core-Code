function bankRobbery() {
    const heroes = [`Tom`, `Dick`, `Harry`];
        function cryForHelp() {
            for (let hero of heroes) {
                console.log(`Help!!!, ${hero.toUpperCase()}`)                    ;
            }
    }
    cryForHelp();
}
